<формы:CustomPage
    xmlns:формы="clr-namespace:База_артикулов.Формы"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:База_артикулов.Формы.Страницы.Редактирование"
      xmlns:CustomControlsWPF="clr-namespace:CustomControlsWPF;assembly=CustomControlsWPF" x:Class="База_артикулов.Формы.Страницы.Редактирование.PageEditClass"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="PageEditClass" Loaded="Page_Loaded" Height="569">

    <Grid x:Name="gMain" Background="White" Loaded="gMain_Loaded">
        <Grid.RowDefinitions>

            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <CustomControlsWPF:LabeledTextBox x:Name="txbTitle" Margin="10,10,10,0" VerticalAlignment="Top" Title="Наименование класса" Text="" Height="75"/>
        <CustomControlsWPF:LabeledTextBox x:Name="txbTitleShort" Margin="10,85,10,0" VerticalAlignment="Top" Title="Сокращенное наименование класса" Text="" Height="75"/>
        <CustomControlsWPF:LabeledTextBox x:Name="txbCode" Margin="10,160,10,0" VerticalAlignment="Top" Title="Код класса" Text="" Height="75"/>
        <CustomControlsWPF:ButtonPrimary x:Name="btnOk" Text="ТЕКСТ ДЕЙСТВИЯ" Click="btnOk_Click" Margin="5,5,5,5" Grid.Row="1" Height="30"/>
        <CustomControlsWPF:ButtonPrimary x:Name="btnCancel"   Color="danger" Text="Отмена" Click="btnCancel_Click" Margin="5,5,5,5" Grid.Row="2" Height="30"/>
        <CustomControlsWPF:LabeledTextBox x:Name="txbDescription" Margin="10,235,10,0" VerticalAlignment="Top" Title="Описание" Text="" Height="75"/>

    </Grid>
</формы:CustomPage>
