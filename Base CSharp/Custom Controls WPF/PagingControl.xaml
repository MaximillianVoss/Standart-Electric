<UserControl x:Class="CustomControlsWPF.PagingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControlsWPF"
             mc:Ignorable="d" Height="50" Width="500">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <local:ButtonPrimary x:Name="btnBack" Grid.Row="1" Text="Назад" Margin="5,5,5,5" Click="btnBack_Click" Grid.Column="1"/>
        <local:ButtonPrimary x:Name="btnNext" Grid.Column="3" Grid.Row="1" Text="Вперед" Margin="5,5,5,5" Click="btnNext_Click"/>
        <local:LabeledComboBox x:Name="cmbItemsPerPage" Title="Число элементов на странице" Grid.Row="1" SelectionChanged="cmbItemsPerPage_SelectionChanged"/>
        <Label x:Name="lblCurrentPage" Margin="5,5,5,5" Grid.Column="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content="1/100" Grid.Row="1" FontSize="14"/>
    </Grid>
</UserControl>
